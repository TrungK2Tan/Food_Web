@model Food_Web.Models.Discount

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="card shadow mb-4">
    <div class="card-header py-3">
