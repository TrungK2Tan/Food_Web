<p>Order Items:</p>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Pic</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td><img src="~/Content/products/@item.Pic" style="width:30px" /></td>
            </tr>


        }
    </tbody>
</table>

