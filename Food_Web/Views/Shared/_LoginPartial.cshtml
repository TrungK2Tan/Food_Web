@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
  
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName() <i class="caret"></i></a>
        <ul class="dropdown-menu">
   
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </li>
   
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
    
        <li><a class="header-btn" href="@Url.Action("Login", "Account", new { id = "loginLink" ,@class = "uil uil-user-md"})"></a></li>
    </ul>
}


