<div class="Chatbox" id="myForm">
    <form action="" class="form-container">
        <h1>HỖ TRỢ</h1>
        <label for="msg"><b>Lời Nhắn</b></label>
        <textarea placeholder="Bạn hãy nhập lời nhắn.." name="msg" id="message" required></textarea>
        <ul id="discussion">
        </ul>
        <div style="display:flex">
            <input type="button" class="btn " id="sendmessage" value="Gửi" />
            <input type="hidden" id="displayname" value="@Session["Email"]" />
            <button type="button" class="btn nut-dong-chatbox " onclick="dongForm()">Đóng</button>
        </div>
    </form>
</div>


<script>
    /*Hàm Mở Form*/
    function moForm() {
        document.getElementById("myForm").style.display = "block";
    }
    /*Hàm Đóng Form*/
    function dongForm() {
        document.getElementById("myForm").style.display = "none";
    }
   
    var chat = $.connection.chatHub;

    chat.client.addNewMessageToPage = function (name, message) {
        if (message.trim() === '' || message.trim() === ':') {
            return;
        }

        // Append the new message to the chat window
        $('#chat-messages').append(chatMessage(name, message));
        $('#message').val('');  // Clear the message input field
        $('#message').focus();  // Focus on the message input field
    };

    $('#message').focus();

    $.connection.hub.start().done(function () {
        $('#sendMessageBtn').click(function () {
            var name = $('#displayname').val();
            var message = $('#message').val();

            chat.server.send(name, message);

            // Prevent the form from submitting
            return false;
        });
    });
    // Khai báo biến chat và kết nối với ChatHub
    

    function chatMessage(currentStoreId, message) {
        return `
        <li class="chat-message">
            <div class="message-content">
                <strong>${currentStoreId}:</strong> ${message}
            </div>
        </li>
    `;
    }
</script>
