@model IEnumerable<Food_Web.Models.FeedBack>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class=" comment-list" style="align-items: center; display: flex;">
    <div class="testimonials-img" style="width:40%;">
        <img style="position: unset; max-width: 471px; width:100%;" src="~/Content/images/testimonial-img.png" />
    </div>
    <div class="" style="width:60%;">
        <div class="row">

            <div class="swiper mySwiper">
                <div class="swiper-wrapper">

                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide">
                            <div class="">
                                <div class="testimonials-box" style="padding: 32px 15px; width: 193px; margin: 0 auto;">

                                    <div class="testimonials-box-text">
                                        <h3 class="h3-title">
                                            @item.fistname
                                        </h3>
                                        <p>
                                            @item.subject_name
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }


                </div>
                <div class="swiper-pagination"></div>
            </div>
            <script>
                var swiper = new Swiper(".mySwiper", {
                    slidesPerView: 3 ,
                    pagination: {
                        el: ".swiper-pagination",
                    },
                });
            </script>
        </div>
    </div>

</div>

@section scripts{
    <script>
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 2,
            spaceBetween: 30,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
        });
    </script>

}


